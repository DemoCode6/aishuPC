.login_logo{text-align: center;margin: 100rpx 0 12rpx;}
.login_logo image{
  width: 70rpx;
  height: 64rpx;
}
.login_title {
  color: #0079FE;
  font-weight: bold;
  padding: 5rpx 0 50rpx;
  text-align: center;
}
.login_main .login_main_title{text-align: center;color: #00acfe;padding-bottom: 20rpx;}
.login_main_button{display: flex;justify-content: center;}
.login_main_button view{
  width: 170rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 1rpx solid #78d1fb;
  background: #fff;
}
.login_main_button view:nth-of-type(2){margin-left: 20rpx;}
.login_input{
  display: flex;align-items: center;border-radius: 10rpx;box-sizing: border-box;
  margin-top: 30rpx;border: 1rpx solid #bfd4de;width: 85%;margin: 30rpx auto 0;padding: 20rpx;font-size: 30rpx;
}
.login_input image{
  width: 32rpx;
  height: 32rpx;
  margin: 0 30rpx;
}
.login_input input{width: 560rpx;}
.login_main .login_sub{
  width: 85%;margin: auto;margin-top: 20px;background-image: linear-gradient(to right, #015EEA, #00BFF9);
  color: #fff;text-align: center;line-height: 80rpx;border-radius: 10rpx;border: none;font-weight: normal;padding: 0;
}
.login_main_button .active{background: #78d1fb;color: #fff;}
.picker,.placeholder{color: #7b7b7b;}
.picker{width: 510rpx;}